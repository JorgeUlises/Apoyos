@*---------Modal Seleccionar y Subir Archivo Evento ---------*@
<div class="modal" id="ModalSeleccionarArchivosEvento" tabindex="-2" role="dialog" aria-labelledby="ModalSeleccionarArchivosEventos">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <p class="centrarVH">
                    <span style='font-size:25px; cursor:pointer' id="referenciaRequisito" class="badge"></span>
                </p>
                <p>
                    <h4 id="idTituloSubirArchivosEventos" class="modal-title" style="padding-left:10px;"><srong>Documento Anexos de Evento</srong></h4>
                </p>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span class='far fa-times-circle fa-lg' title='Cerrar'></span>
                </button>
            </div>
            <div class="modal-body">
                <br />
                <div class="custom-file">
                    <input type="file" multiple class="custom-file-input" id="FileUploadFormFileEvento" lang="es" placeholder="">
                    <label class="custom-file-label" for="customFileLang">Seleccionar Archivo</label>
                </div>

                <input id="HiddenPeticionId" type="hidden" name="HiddenPeticionId" value="">

            </div>

            <div class="modal-footer">
                <button type="button" class="btn BotonNaranjaClaro" data-dismiss="modal">Cerrar</button>
                <button type="button" onclick="subirArchivosEventoButton('FileUploadFormFileEvento')" class="btn BotonNaranjaClaro">Subir</button>
            </div>
        </div>
    </div>
</div>

