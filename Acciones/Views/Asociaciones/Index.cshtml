<div class="row">
    <table width="100%" style="border:none;">
        <tr>
            <td width="20%" align="left" style="padding-left:20px;">
                <img src="~/Images/Asociacion.jpg" height='80' style='border: none; border-radius: 0px; padding: 0px;'/>
            </td>
            <td width="70%" align="center">
                <h1 class="letraAzulEncabezado">ASOCIACIONES</h1>
            </td>
            <td width="10%" align="right">
                <div class="row">
                    <a asp-action="Create" role='button'>
                        <i class="circulo fas fa-plus-circle" data-toggle='tooltip' data-placement='top' data-html='true' title="Nuevo Registro de Asociaciones"></i>
                    </a>
                    <a data-toggle='collapse' href='#collapseExample' role='button' aria-expanded='false' aria-controls='collapseExample'>
                        <i class="circulo fas fa-filter" data-toggle='tooltip' data-placement='top' data-html='true' title="Aplicar Filtro"></i>
                    </a>
                    <a asp-action="IntegrantesAsociacion" asp-controller="Reportes">
                        <i class="circulo fa fa-user-plus" data-toggle='tooltip' data-placement='top' data-html='true' title="Integrantes de Asociación"></i>
                    </a>
                </div>
            </td>
        </tr>
    </table>
</div>

<div class="collapse" id="collapseExample">
    <div class="card card-body">

        <input type="text" id="hColoniaBuscar" name="hColoniaBuscar" style="display:none" />
        <input type="text" id="hCalleBuscar" name="hCalleBuscar" style="display:none" />

        <table class='table table-bordered' style='width:100%;'>
            <tr>
                <td style='text-align: center; padding: 5px;' class='fondoMenuFactor' width="40%">
                    <label id="nombreAsociacionLabel">Nombre</label>
                </td>

                <td style='text-align: center; padding: 5px;' class='fondoMenuFactor' width="40%">
                    <label id="emailLabel">e-mail</label>
                </td>
                <td style='text-align: center; padding: 5px;' class='fondoMenuFactor' width="30%">
                    <label id="TelefonoLabel">Teléfono</label>
                </td>
            </tr>
            <tr>
                <td style='text-align: center; background-color: white; color: black; padding: 2px;' width="40%">
                    <input type="text" class="form-control" id="BuscaNombreAsociacion" />
                </td>
                <td style='text-align: center; color: black; padding: 2px;' width="40%">
                    <input type="text" class="form-control" id="BuscaEmailAsociacion" />
                </td>
                <td style='text-align: center; color: black; padding: 2px;' width="30%">
                    <input type="text" class="form-control" id="BuscaTelefonoAsociacion" />
                </td>
            </tr>
        </table>

        <table class='table table-bordered' style='width:100%;'>
            <tr>
                <td class='fondoMenuFactor' width="30%" style='text-align: center; vertical-align: middle;'>
                    <label for="ColoniaLabel" id="ColoniaLabel">Colonia</label>
                </td>
                <td class='fondoMenuFactor' width="30%" style='text-align: center; vertical-align: middle;'>
                    <label for="CalleLabel">Calle</label>
                </td>
                <td style='text-align: center; padding: 5px;' class='fondoMenuFactor' width="10%">
                    <label for="CPLabel">CP</label>
                </td>
                <td style='text-align: center; padding: 5px;' class='fondoMenuFactor' width="30%">
                </td>
            </tr>
            <tr>
                <td style='text-align: center;' width="30%">
                    <input type="text" class="form-control" name="coloniasBuscar" id="coloniasBuscarAsociacion" />
                </td>
                <td style='text-align: center;' width="40%">
                    <input type="text" class="form-control" name="callesBuscar" id="callesBuscarAsociacion" />
                </td>
                <td style='text-align: center; background-color: white; color: black; padding: 2px;' width="10%">
                    <input type="text" class="form-control" name="IngresaCP" id="CPbuscarAsociacion" />
                </td>
                <td style='text-align: center; padding: 5px;' width="20%">
                    <button type='button' onclick='FiltraAsociaciones();' class='btn btn-secondary'>FILTRAR</button>&nbsp;
                    <a asp-action="Index"><button class="btn btn-secondary">CANCELAR</button> </a>
                </td>
            </tr>
        </table>

    </div>
</div>

<p align="right">
    <label id="labelNumeroRegistros">&nbsp;</label>
</p>

<div id="divAsociaciones"></div>

<div style="display: inline-block; text-align: right; width: 100%">
    <ul id="pagina-solicitudes" class="pagination-sm justify-content-end"></ul>
</div>

<div align="right">
    <label id="labelNumeroRegistros_footer"></label>
    &nbsp;
    <label>Por Página</label>
    <SELECT id="selNumeroRegistrosXpagina" NAME="selNumeroRegistrosXpagina" SIZE=1 onChange="javascript:FiltraAsociaciones();">
        <OPTION VALUE="5">5</OPTION>
        <OPTION VALUE="10" selected="selected">10</OPTION>
        <OPTION VALUE="20">20</OPTION>
        <OPTION VALUE="100">100</OPTION>
        <OPTION VALUE="200000">Todos</OPTION>
    </SELECT>
</div>


@*---------Modal Muestra Detalle de Asociación ---------*@

<div class="modal fade bd-example-modal-xl" id="modalMuestraDatosAsociacion" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span class='far fa-times-circle fa-lg' title='Cerrar'></span>
                </button>
            </div>
            <div class="modal-body">
                <div id='DetalleAsociacion'></div>
                <hr />
                <hr />
                <div class="text-center">
                    <h4 style="background-color: rgba(38, 112, 233, 1); color: white;">INTEGRANTES</h4>
                </div>
                <div id='IntegrantesAsociacionId'></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-dark" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>